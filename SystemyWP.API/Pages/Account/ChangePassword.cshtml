@page
@model SystemyWP.API.Pages.Account.ChangePassword
@{
    ViewData["Title"] = "";
    Layout = "_Layout";
}


        <form id="change-password-form" method="post">
        <div class="flex-dialog">
            <input type="hidden" asp-for="Form.ReturnUrl" value="@Model.Form.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>

                <label asp-for="Form.OldPassword"></label>
                <input asp-for="Form.OldPassword"/>
                <span class="val-text" asp-validation-for="Form.OldPassword"></span>

                <label asp-for="Form.NewPassword"></label>
                <input asp-for="Form.NewPassword"/>
                <span class="val-text" asp-validation-for="Form.NewPassword"></span>

                <label asp-for="Form.ConfirmPassword"></label>
                <input asp-for="Form.ConfirmPassword"/>
                <span class="val-text" asp-validation-for="Form.ConfirmPassword"></span>

            </div>

            <hr>

            <div class="flex-links">
            <button class="button" type="submit">Zmień Hasło</button>
            <button class="button" asp-page-handler="Return" method="post">Wróć</button>
            </div>
        </form>
