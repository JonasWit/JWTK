@page
@model SystemyWP.API.Pages.Account.ForgotPassword

@{
    ViewData["Title"] = "Forgotten Password";
    Layout = "_Layout";
}

<div class="row">
    <div class="m-auto">
        <h4 class="pb-3">@ViewData["Title"]</h4>
        <p>Podaj adres email użyty przy rejetrsacji konta</p>
        <hr />
        <form method="post" class="pb-3">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="pb-2"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Wyślij</button>
        </form>
    </div>
</div>