<MudSelect @bind-Value="@Culture" Variant="Variant.Outlined">
    @foreach (var culture in _cultures)
    {
        var cultureName = culture.TwoLetterISOLanguageName;
        switch (cultureName)
        {
            case AppConfig.CultureKeys.ENISO:
                <MudSelectItem Value="@culture">
                    <img src="https://upload.wikimedia.org/wikipedia/en/a/a4/Flag_of_the_United_States.svg" height="14" class="mr-1" />EN
                </MudSelectItem>
                break;
            case AppConfig.CultureKeys.PLISO:
                <MudSelectItem Value="@culture">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/e/e9/Flag_of_Poland_%28normative%29.svg" height="14" class="mr-1" />PL
                </MudSelectItem>
                break;
        }
    }
</MudSelect>






