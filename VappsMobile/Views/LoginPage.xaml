<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vms="clr-namespace:VappsMobile.ViewModels"
             x:DataType="vms:LoginPageViewModel"
             x:Class="VappsMobile.Views.LoginPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Style="{StaticResource DefaultPage}"
             xmlns:config="clr-namespace:VappsMobile.AppConfig"
             Shell.NavBarIsVisible="False" 
             Shell.BackgroundColor="{DynamicResource Primary}"
             Title="Logowanie">

    <Grid>
        <VerticalStackLayout Margin="0,20,0,0" VerticalOptions="StartAndExpand" Spacing="50">
            <Label Text="Logowanie" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" />

            <StackLayout Spacing="10"  Orientation="Vertical" HorizontalOptions="CenterAndExpand" Margin="10">
                <Frame Padding="0" BackgroundColor="Transparent" BorderColor="{StaticResource Primary}" HorizontalOptions="FillAndExpand" CornerRadius="10">
                    <StackLayout Orientation="Horizontal">
                        <Frame BackgroundColor="{StaticResource Primary}" HeightRequest="40" WidthRequest="40" CornerRadius="30" Padding="0" Margin="5">
                            <Image Source="{x:Static config:Icons.AuthUser}" Aspect="Fill"/>
                        </Frame>
                        <Entry Text="{Binding Email}" Placeholder="Adres Email" PlaceholderColor="{StaticResource Gray600}"
                           FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="0,0,20,0">
                            <Entry.Behaviors>
                                <toolkit:EmailValidationBehavior 
                                InvalidStyle="{StaticResource InvalidEntryStyle}"
                                ValidStyle="{StaticResource ValidEntryStyle}"
                                Flags="ValidateOnValueChanged" />
                            </Entry.Behaviors>
                        </Entry>
                    </StackLayout>
                </Frame>
                <Frame Padding="0" BackgroundColor="Transparent" BorderColor="{StaticResource Primary}" HorizontalOptions="FillAndExpand" CornerRadius="10">
                    <StackLayout Orientation="Horizontal">
                        <Frame BackgroundColor="{StaticResource Primary}" HeightRequest="40" WidthRequest="40" CornerRadius="30" Padding="0" Margin="5">
                            <Image Source="{x:Static config:Icons.AuthLock}" Aspect="Fill"/>
                        </Frame>
                        <Entry IsPassword="True" Text="{Binding Password}" Placeholder="Hasło" PlaceholderColor="{StaticResource Gray600}" TextColor="Black" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="0,0,20,0"/>
                    </StackLayout>
                </Frame>
                <HorizontalStackLayout HorizontalOptions="StartAndExpand" >
                    <CheckBox IsChecked="{Binding RememberMe}"/>
                    <Label Text="Zapamiętaj mnie" TextColor="{StaticResource Gray600}" FontSize="Small" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </StackLayout>
            <Button Text="Zaloguj się" WidthRequest="150" Command="{Binding SignInCommand}" TextColor="{StaticResource Secondary}"></Button>
            <StackLayout Spacing="15">
                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" >
                    <Label Text="Stwórz Konto" TextColor="Black" FontAttributes="Bold" FontSize="Small"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding SignUpCommand}"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
                <!--<StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                    <Label Text="Przpomnij Hasło" FontAttributes="Bold" HorizontalOptions="End" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Command="{Binding ForgotPasswordCommand}"></TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                </StackLayout>-->
            </StackLayout>
        </VerticalStackLayout>
        <ActivityIndicator
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand" />
    </Grid>

</ContentPage>