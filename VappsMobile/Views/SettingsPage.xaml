<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VappsMobile.Views.SettingsPage"
             Title="SettingsPage"
             xmlns:vms="clr-namespace:VappsMobile.ViewModels"
             x:DataType="vms:SettingsPageViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Style="{StaticResource DefaultPage}"
             xmlns:config="clr-namespace:VappsMobile.AppConfig"
             Shell.BackgroundColor="{DynamicResource Primary}">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Delete Account" Command="{Binding DelteAccountCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>