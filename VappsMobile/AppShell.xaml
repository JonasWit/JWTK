<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VappsMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VappsMobile"
    xmlns:views="clr-namespace:VappsMobile.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Logowanie"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <FlyoutItem Route="VappsMasterPage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Vapps" ContentTemplate="{DataTemplate views:VappsMasterPage}"/>
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate views:ContactPage}"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate views:AboutPage}"/>
    </FlyoutItem>
 

</Shell>
